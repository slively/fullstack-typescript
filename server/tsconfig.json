{
	"compilerOptions": {
		"outDir": "build/dist",
		"target": "es5",
		"module": "commonjs",
		"sourceMap": true,
		"allowJs": true,
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"experimentalDecorators": true,
		"noUnusedLocals": true,
		"lib": [
			"es2017"
		],
		"baseUrl": "src"
	},
	"include": [
		"../shared-models/**/*",
		"src/**/*",
		"knexfile.ts"
	],
	"exclude": [
		"node_modules"
	]
}
