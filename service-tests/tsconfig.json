{
	"compilerOptions": {
		"outDir": "build/src",
		"target": "es5",
		"module": "commonjs",
		"sourceMap": true,
		"allowJs": true,
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"experimentalDecorators": true,
		"noUnusedLocals": true,
		"baseUrl": "src",
		"lib": [
			"es2017"
		]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}
