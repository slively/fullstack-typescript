{
	"compilerOptions": {
		"module": "commonjs",
		"sourceMap": true,
		"allowJs": true,
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"experimentalDecorators": true,
		"noUnusedLocals": true,
		"target": "es5",
		"lib": [
			"es2017",
			"dom"
		],
		"jsx": "react",
		"baseUrl": "src"
	},
	"include": [
		"src/**/*",
		"../service-entities/**/*"
	]
}
