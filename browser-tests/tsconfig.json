{
	"compilerOptions": {
		"sourceMap": true,
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"removeComments": true,
		"noImplicitAny": false,
		"outDir": "src/"
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"./src/**/*"
	],
	"compileOnSave": false
}
